<!-- MY BIRDS -->

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="field">
<table>
  <thead>
    <tr>
      <th><h3>My Birds</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>


<tbody>
  <% if user_signed_in? %>
    <% current_user.birds.each do |bird| %>
        <tr>
          <td><%= bird.common_name %></td>
          <td><%= bird.date_seen%></td>
          <td><%= link_to 'Show', bird %></td>
          <td><%= link_to 'Edit', edit_bird_path(bird) %></td>
          <td><%= link_to 'Destroy', bird, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  <% else %>
    <p class="notice">You must be <%= link_to('logged in', new_user_session_path)  %> to view, edit, or delete your tweets. </p>

  <% end %>
</tbody>
</table>
</div>
<br>

<%= link_to 'New Bird', new_bird_path, class:"background" %>
